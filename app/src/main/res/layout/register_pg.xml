<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Have an account? Log in -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:background="@drawable/log_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/have_an_acc"
            android:layout_width="185dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="382dp"
            android:gravity="center_horizontal|top"
            android:text="@string/have_an_acc"
            android:textAppearance="@style/have_an_acc" />

        <TextView
            android:id="@+id/by_clicking"
            android:layout_width="317dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="542dp"
            android:gravity="top"
            android:text="@string/by_clicking"
            android:textAppearance="@style/by_clicking" />

        <TextView
            android:id="@+id/join_our_co"
            android:layout_width="225dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="229dp"
            android:gravity="top"
            android:text="@string/join_our_co"
            android:textAppearance="@style/join_our_co" />

        <View
            android:id="@+id/discord"
            android:layout_width="253dp"
            android:layout_height="45.49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="434dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/or"
            android:layout_width="317dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="661dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/email"
            android:layout_width="253dp"
            android:layout_height="45.49dp"
            android:layout_alignBottom="@+id/or"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="69dp"
            android:layout_marginBottom="525dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/google"
            android:layout_width="253dp"
            android:layout_height="45.49dp"
            android:layout_alignBottom="@+id/have_an_acc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="92dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="87dp"
            android:background="#FFFFFF" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>